{
    "name": "Scraper Application",
    "description": "A command line tool to extract information from a single web page into json",
    "license": "BSD-3-Clause",
    "keywords": [
        "Scraping"
    ],
    "authors": [
        {
            "name": "Malte Riesch",
            "email": "malteriesch@googlemail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "zfcampus/zf-console": "~1.0-dev",
        "fabpot/goutte": "^3.0",
        "symfony/console": "2.4.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "mockery/mockery": "dev-master",
        "mikey179/vfsStream": "1.3.*@dev"
    },
    "autoload": {
        "psr-4": {"Scraper\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"ScraperTests\\" :"tests/"}
    }
}
